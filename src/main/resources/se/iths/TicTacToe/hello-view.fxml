<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="se.iths.TicTacToe.HelloController">


    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="scoreLabel" text="Player X: 0 | Player O: 0"/>


    <GridPane>
        <Button fx:id="button1" onAction="#onButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="0" prefWidth="100"
                prefHeight="100"/>
        <Button fx:id="button2" onAction="#onButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="100"
                prefHeight="100"/>
        <Button fx:id="button3" onAction="#onButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="0" prefWidth="100"
                prefHeight="100"/>
        <Button fx:id="button4" onAction="#onButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="100"
                prefHeight="100"/>
        <Button fx:id="button5" onAction="#onButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="100"
                prefHeight="100"/>
        <Button fx:id="button6" onAction="#onButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="1" prefWidth="100"
                prefHeight="100"/>
        <Button fx:id="button7" onAction="#onButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="2" prefWidth="100"
                prefHeight="100"/>
        <Button fx:id="button8" onAction="#onButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="100"
                prefHeight="100"/>
        <Button fx:id="button9" onAction="#onButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="2" prefWidth="100"
                prefHeight="100"/>
    </GridPane>
</VBox>
